generator client {
  provider      = "prisma-client-js"
  output        = "../models"
  binaryTargets = ["native", "windows", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model client {
  id           String         @id(map: "client_id") @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email        String
  password     String
  profile      Json?          @default("{}")
  deleted_at   DateTime       @db.Timestamptz(6)
  organization organization[]
}

model organization {
  id        String    @id(map: "organization_id") @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  id_client String    @db.Uuid
  name      String
  data      Json
  questions Json
  deleted   DateTime? @db.Timestamptz(6)
  client    client    @relation(fields: [id_client], references: [id], onDelete: Cascade)
}
